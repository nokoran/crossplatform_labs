@model lab5.ClassLibrary.lab1DTO
@{
    ViewData["Title"] = "PR1";
}

<h2>@ViewData["Title"]</h2>
<form method="post" enctype="multipart/form-data" asp-controller="Labs" asp-action="PR1">
    <div class="form-group">
        <label for="a">a</label>
        <input required type="number" step="1" class="form-control" id="a" name="a" asp-for="a">
    </div>
    <div class="form-group">
        <label for="b">b</label>
        <input required type="number" step="1" class="form-control" id="b" name="b" asp-for="b">
    </div>
    <div class="form-group">
        <label for="c">c</label>
        <input required type="number" step="1" class="form-control" id="c" name="c" asp-for="c">
    </div>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>
@if(Model != null)
{
    <div class="container mt-5">
        @if(Model.isSuccessful)
        {
            <div class="row">
                <label for="response">Response</label>
                <input type="text" id="response" value="@Model.response">
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.error))
        {
            <div class="row">
                <label for="error"></label>
                <input type="text" id="error" value="@Model.error">
            </div>
        }
    </div>
}